
<section id="profile-section">
  <div id="profile" style="height: 100vh; background-color:rgb(223, 238, 224); padding:0 15px 0 15px;">
  <h4 id="act-title" class="text-center pt-3 pb-2" style="color: hsl(185, 24%, 16%)"> <b>Profile</b> </h4>
  <img src="{{user.image}}" class="w-50 rounded-lg mb-3" alt="There is no profile picture">
  <p class="font-weight-bold">Name: <p>{{user.name}}</p></p>
  <p class="font-weight-bold">Email: <p>{{user.email}}</p></p>
  
  <a href="/profile-picture" class="btn-primary btn btn-sm mb-3">Edit Profile</a>
  <a href="/auth/logout" class="btn-danger btn btn-sm">Logout</a>
  </div>


<div data-spy="scroll" data-target="#card-scroll" data-offset="0" class="scrollspy-example mb-3" id="act-cards" style="display: flex; justify-content:center;">
  <h5 id="act-title" class="text-center" style="font-size:2.5rem; color: #2C5559;">Activities</h5>
 {{#each activities}}
<div class="portfolio-item card" style="width: 280px; margin:0;">
  <div class="card-body">
     <div class="wow rotateInUpLeft animated" data-animation-delay="5.8s" style="visibility: visible;">
       <img class="card-img-top" src="{{this.img}}" alt="welcome">
     </div>
     <div style="display: flex; align-items:flex-start;" class="portfolio-desc align-center card-img-overlay">
       <div class="folio-info">
         <br>
         <h6 style="text-align: center; font-size:  1rem;" ><b>{{this.user_id.name}}</b></h6>
         <p style="text-align: center;" ><b>{{this.typeAct}}</b></p>
         <p style="text-align: justify;" class="card-text">This activity was scheduled at <b>{{this.time}}</b> and the amount of people that will go are <b>{{this.numPeople}}</b></p>
         <br><br>
         <div style="display:flex; justify-content:space-between;">
         <a style="color:blue;" href="/activities/{{this._id}}" class="fancybox"><i class="far fa-edit fa-2x"></i></a>
         <a style="color: red;" href="/activities/delete/{{this._id}}" class="fancybox"><i class="far fa-trash-alt fa-2x"></i></a>
         </div>
       </div>
     </div>
     </div>
   </div>
   <br><br>
 {{/each}}
</div>


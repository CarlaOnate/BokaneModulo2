
<section id="profile-section">
  <div id="profile">
  <h2 id="profile-title"class="">Profile</h2>
  <p>Profile Picture:</p>
  <img src="{{user.image}}" class="w-50 rounded-lg mb-3" alt="There is no profile picture">
  <p class="font-weight-bold">Name: <p>{{user.name}}</p></p>
  <p class="font-weight-bold">Email: <p>{{user.email}}</p></p>
  <a href="/profile-picture" class="btn-primary btn btn-sm mb-3">Edit Profile</a>
  <a href="/auth/logout" class="btn-danger btn btn-sm">Logout</a>
  </div>
<div data-spy="scroll" data-target="#card-scroll" data-offset="0" class="scrollspy-example mb-3" id="act-cards">
  {{!-- NO JALA ESTO DEL SCROLL PERO NO SE VE MAL ASI XD --}}
  <h4 class="pb-2">Next activities</h4>
  <div id="card-scroll">
  {{#each activities}}
 <div class="card m-1 act-card" style="width: 18rem;">
    <div class="card-body">
      <h3 class="card-title">{{this.user_id.name}}</h3>
      <h5 class="card-title">{{this.typeAct}}</h5>
  {{#if this.time}}
      <p class="card-text">This activity was scheduled at {{this.time}} and the amount of people that will go are {{this.numPeople}}</p>
  {{else}}
      <p class="card-text">This activity was scheduled and the amount of people that will go are {{this.numPeople}}</p>
  {{/if}}
      <div id="buttons-card">
        <form action="/activities/{{this._id}}" method="GET">
          <input type="submit" class="btn btn-verde m-2" value="Edit">
        </form>
        <form action="/activities/delete/{{this._id}}" method="GET">
          <input type="submit" class="btn text-white btn-danger m-2" value="Delete">
        </form>
      </div>
    </div>
  </div>
  {{/each}}
  </div>
</div>

<div data-spy="scroll" data-target="#card-scroll" data-offset="0" class="scrollspy-example mb-3" id="act-cards">
  {{!-- NO JALA ESTO DEL SCROLL PERO NO SE VE MAL ASI XD --}}
  <h4 class="pb-2">Next reservations</h4>
  <div id="card-scroll">
  {{#each reservations}}
 <div class="card m-1 act-card" style="width: 18rem;">
    <div class="card-body">
      <h3 class="card-title">{{this.user_id.name}}</h3>
      <p>From:{{this.startDate}}</p>
      <p>To:{{this.endDate}}</p>
      <p>{{this.numAdult}} adults and {{this.numChild}} children</p>
      <p>{{this.room}}</p>
      {{#if this.digitalPayment}}
      <p>Payed</p>
      {{/if}}

      <div id="buttons-card">
        {{#unless this.digitalPayment}}
        <form action="/reservation/edit/{{this._id}}" method="GET">
          <input type="submit" class="btn btn-verde m-2" value="Edit">
        </form>
        {{/unless}}
        <form action="/reservation/delete/{{this._id}}" method="GET">
          <input type="submit" class="btn text-white btn-danger m-2" value="Delete">
        </form>
      </div>
    </div>
  </div>
  {{/each}}
  </div>
</div>
</section>

